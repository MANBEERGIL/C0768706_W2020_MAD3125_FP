<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ui.AddNewHydroBillActivity">

    <EditText
            android:id="@+id/text_custid"
            android:layout_width="411dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint=" Bill id"
            android:inputType="textPersonName"
            android:textColor="#100E0E"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textColorHighlight="#50D2E3"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/text_agency"
            android:layout_width="410dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Agency Name"
            android:inputType="textPersonName"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textColor="#100D0D"
            android:textColorHighlight="#43C4D5"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bill_date" />

    <EditText
            android:id="@+id/text_units"
            android:layout_width="411dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:ems="10"
            android:hint="Units Consumed"
            android:inputType="number"
            android:textColor="#131111"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_agency" />

    <Button
            android:id="@+id/btn_hydro"
            android:layout_width="105dp"
            android:layout_height="74dp"
            android:layout_marginStart="161dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="162dp"
            android:background="@android:color/holo_blue_light"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textColorHint="#3ED6EA"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_units" />

    <TextView
            android:id="@+id/bill_date"
            android:layout_width="411dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:ems="10"
            android:hint="Bill Date"
            android:inputType="textPersonName"
            android:textColor="#1A1616"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_custid" />

</androidx.constraintlayout.widget.ConstraintLayout>